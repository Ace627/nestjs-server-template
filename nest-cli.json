{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "../public/**/*", "outDir": "./dist/public" },
      { "include": "../src/views/**/*", "outDir": "./dist/views" },
      { "include": "../package.json", "outDir": "./dist/package.json" }
    ],
    "deleteOutDir": true,
    "builder": "webpack"
  },
  "generateOptions": {
    "flat": false,
    "spec": false
  }
}
