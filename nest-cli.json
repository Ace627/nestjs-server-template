{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [{ "include": "../public/**/*", "outDir": "./dist/public" }],
    "deleteOutDir": true,
    "builder": "webpack"
  },
  "generateOptions": {
    "flat": false,
    "spec": false
  }
}
